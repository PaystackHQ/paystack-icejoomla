<extension type="component" version="2.5">
    <name>Paystack Icebooking</name>
    <extensionname>Paystack Icebooking</extensionname>
    <creationDate>July 2012 Version 1.00</creationDate>
  <author>Afrisoft Interactive</author>
  <authorEmail>support@paystack.com</authorEmail>
  <authorUrl>http://paystack.com</authorUrl>
  <copyright>(C) www.paystack.com, All rights reserved.</copyright>
  <license>www.paystack.com</license>
  <!--  The version string is recorded in the components table -->
  <version>1.00</version>
  <!-- The description is optional and defaults to the name -->
    <description>
    <![CDATA[<p>Paystack Payment Integration for IceBooking
  <br /><a href="http://paystack.com">www.paystack.com</a>
  </p>]]></description> 

  <!-- Custom Install Script to execute -->
  <installfile>install.paystackicebooking.php</installfile>
  
  <!-- Custom Uninstall Script to execute --> 
  <uninstallfile>uninstall.paystackicebooking.php</uninstallfile>
 

  <!-- Site Main File Copy Section-->
  <files source="site" folder="site">
    <file>paystackicebooking.php</file>
  </files>
  
  <administration>
    <!-- Administration Menu Section -->
    <menu link="com_paystackicebooking" img="components/com_spc/images/paystack.png">Paystack IceBooking</menu>
    
    <!-- Administration Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /admin/ in the package
     -->
    <files folder="admin">
       <file>index.html</file>
       <file>admin.paystackicebooking.php</file>
       <file>admin.paystackicebooking.html.php</file>
         <file>toolbar.paystackicebooking.html.php</file>  
         <file>toolbar.paystackicebooking.php</file>
      <folder>images</folder>  
      <folder>paystack</folder>
    </files>
    
    <!-- Administration Main Media File Copy Section -->
    <media folder="admin" destination="com_paystackicebooking/images">
      <file>images/paystackicebooking.png</file>
    </media>
  </administration>
</extension>